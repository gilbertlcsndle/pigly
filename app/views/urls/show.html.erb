<main>
  <div class="container">
		<div class="container__item" style='text-align: center;word-wrap: break-word;'>
      <%= image_tag 'pig-nose.png', width: 100 %>
      <h1>Your long url was successfully eaten!</h1>
      <h2 style='color: #2e2e2e'><%= @url.original_url %></h2>

			<input id="shortened-url" class='form__field' value="<%= request.host_with_port + '/' + @url.short_url %>">
			<button class="btn btn--primary btn--inside uppercase" data-clipboard-target="#shortened-url">
				Copy
			</button>
    </div>
  </div>
</main>

<script>
  new ClipboardJS('.btn');
</script>
